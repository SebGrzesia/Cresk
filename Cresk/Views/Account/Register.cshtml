@model Cresk.ViewModels.AccountRegisterViewModel
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
        Layout = null;
}

<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>@ViewData["Title"] - Register</title>
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
        <link rel="stylesheet" href="~/css/loginStyle.css" asp-append-version="true" />
        <link href="~/lib/font-awesome/css/all.css" rel="stylesheet" />
    </head>

    <body>
        <div class="login_layout">
            <div class="logo">
                <img src="~/img/name_1.png"/>
            </div>
            <div class="center">
                <h1>Register</h1>
                <form method="post" asp-action="Register">
                    <div class="text_Field">
                        <input asp-for="Name" type="text" required />
                        <span></span>
                        <label>Username</label>
                    </div>
                    <div class="text_Field">
                        <input asp-for="Email" type="text" required />
                        <span></span>
                        <label>E-mail</label>
                    </div>
                    <div class="text_Field">
                        <input asp-for="Password" type="password" required />
                        <span></span>
                        <label>Password</label>
                    </div>
                    <div class="text_Field">
                        <input asp-for="Password2" type="password" required />
                        <span></span>
                        <label>Password</label>
                    </div>
                    <input type="submit" value="Register" />
                    <div class="signupLink">
                        <a asp-area="" asp-controller="Account" asp-action="Login">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </body>
</html>